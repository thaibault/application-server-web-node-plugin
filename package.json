{
  "name": "serverwebnodeplugin",
  "version": "1.0.207",
  "license": "CC-BY-3.0",
  "description": "A generic extendable application and file server for webNode.",
  "homepage": "https://torben.website/serverWebNodePlugin",
  "documentationWebsite": {
    "name": "serverWebNodePlugin",
    "trackingCode": "UA-40192634-24"
  },
  "keywords": [
    "web",
    "backend",
    "application",
    "server"
  ],
  "files": [
    "index.ts",
    "type.ts"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/serverWebNodePlugin.git"
  },
  "scripts": {
    "build": "webOptimizer build",
    "check": "yarn check:types; yarn lint",
    "check:types": "webOptimizer check:types",
    "clear": "webOptimizer clear",
    "document": "webOptimizer document",
    "lint": "webOptimizer check:type; webOptimizer lint",
    "prepare": "yarn build",
    "report:coverage": "nyc report --reporter=text-lcov | coveralls",
    "serve": "yarn build && webNode",
    "start": "yarn serve",
    "test": "webOptimizer test",
    "update": "yarn version --patch && yarn publish",
    "update:documentation": "documentationWebsite --log-level info",
    "watch": "webOptimizer build --watch"
  },
  "peerDependencies": {
    "@babel/runtime": "*",
    "web-node": "*"
  },
  "devDependencies": {
    "@types/jest": "*",
    "@types/loader-utils": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "babel-eslint": "*",
    "clientnode": "*",
    "documentation-website": "*",
    "eslint": "*",
    "eslint-config-google": "*",
    "eslint-plugin-jsdoc": "*",
    "jest": "*",
    "jsdoc": "*",
    "web-node": "*",
    "weboptimizer": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-dev-server": "*"
  },
  "webNode": {
    "server": {
      "application": {
        "rootPath": {
          "__evaluate__": "currentPath"
        },
        "port": 8080,
        "hostName": "127.0.0.1"
      },
      "authentication": {
        "login": "admin",
        "password": "admin",
        "salt": "admin",
        "staticAssets": true
      },
      "hostNamePrefix": "",
      "hostNamePattern": ".+",
      "httpBasicAuthenticationCancelRedirectHTMLContent": "<html><head><meta charset=\"utf-8\" /><title>authenticationRedirect</title><meta http-equiv=\"refresh\" content=\"0; URL={1}\" /><script type=\"text/javascript\">window.location.href = '{1}';</script></head><body></body></html>",
      "options": {
        "allowHTTP1": true
      },
      "dynamicPathPrefix": "api"
    }
  },
  "sideEffects": false,
  "webOptimizer": {
    "targetTechnology": "node"
  }
}
